[credential]
	helper = osxkeychain
[user]
	name = Diederik van der Boor
	email = vdboor@edoburu.nl
[core]
	editor = vim
	pager = less -FiXRMS
	excludesfile = /etc/gitignore_global
	attributesfile = /etc/gitattributes_global
[color]
	ui = auto
[alias]
	add = add -v
	st = status
	staged = diff --staged -C
	unstage = reset HEAD
	versions = !git tag -l -n1 | sed -e 's/^v//' | sort -t. -k 1,1n -k 2,2n -k 3,3n -k 4,4n
	up = pull --rebase --stat
	diff-all = diff -C HEAD
	lg = log --all --graph --decorate
	log-refs = log --all --graph --decorate --oneline --simplify-by-decoration --no-merges
	log-timeline = log --format='%Cred%h%Creset %an %Cgreen(%ad / %ar)%Creset - %s'
	reflog-timeline = reflog --format='%Cred%h%Creset %an %Cgreen(%cd / %cr)%Creset - %gd %gs -- %s'
	diff-stat = diff -b --stat=200
	log-local = log --oneline origin..HEAD
	log-fetched = log --oneline HEAD..origin/master
	svncommit = !git stash && git svn dcommit --rmdir && git stash pop
	pr = !sh -c \"git fetch upstream pull/${1}/head:pr/${1} && git checkout pr/${1}\"
[log]
	decorate = short
	date = local
[diff]
	compactionHeuristic = true
[fetch]
	pruneTags = true
[branch]
	autosetuprebase = always
[rebase]
	autoStash = true
[rerere]
	enabled = true
	autoupdate = true
[push]
	default = current
[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
	insteadOf = "github:"
[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
	insteadOf = "gist:"
